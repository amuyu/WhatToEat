<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout">


    <TextView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#2f333a"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:text="americano"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageView2"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#494e56"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:text="latte"
        app:layout_constraintLeft_toRightOf="@id/imageView1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#494e56"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:text="cappuccino"
        app:layout_constraintTop_toBottomOf="@id/imageView1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageView4"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#2f333a"
        android:textColor="#fff"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:text="bluebottle"
        app:layout_constraintBaseline_toBaselineOf="@id/imageView3"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btnUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instagram"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout"
        android:layout_marginTop="50dp"/>


</RelativeLayout>
